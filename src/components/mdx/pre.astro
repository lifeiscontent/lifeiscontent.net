---
import clsx from 'clsx'
import type { HTMLAttributes } from 'astro/types'

// eslint-disable-next-line @typescript-eslint/no-empty-object-type
interface Props extends HTMLAttributes<'pre'> {}

const { class: className = '', ...rest } = Astro.props

const baseClasses =
  'not-prose flex box-border overflow-x-auto overscroll-x-contain [&>code]:grow [&>code]:w-0 [&_.line]:inline-flex [&_.line]:min-w-max'
const combinedClasses = clsx(baseClasses, className)
---

<pre class={combinedClasses} {...rest}>
  <slot />
</pre>
