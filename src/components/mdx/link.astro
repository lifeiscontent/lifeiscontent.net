---
import type { HTMLAttributes } from 'astro/types'
import Anchor from '@components/ui/anchor.astro'

// eslint-disable-next-line @typescript-eslint/no-empty-object-type
interface Props extends HTMLAttributes<'a'> {}

const { href, ...props } = Astro.props
const hrefValue = href?.toString()
const isInternal = hrefValue?.startsWith('/') ?? false
const target = isInternal ? undefined : '_blank'
const rel = isInternal ? undefined : 'noopener noreferrer'
---

<Anchor href={href} target={target} rel={rel} weight="medium" {...props}>
  <slot />
</Anchor>
