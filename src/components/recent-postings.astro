---
import type { CollectionEntry } from 'astro:content'
import BlogPostingCard from '@components/blog-postings/blog-posting-card.astro'
import ButtonLink from '@components/ui/button-link.astro'

interface Props {
  blogPostings: CollectionEntry<'blog-postings'>[]
  keywordMap?: Record<string, CollectionEntry<'defined-terms'>[]> | undefined
}

const { blogPostings, keywordMap }: Props = Astro.props
---

{
  blogPostings.length > 0 && (
    <section class="px-4 py-16 sm:py-20">
      <div class="grid w-full place-items-center">
        <div class="flex w-full max-w-4xl flex-col gap-12">
          <div class="flex flex-col gap-3">
            <p class="text-subtle text-xs font-semibold tracking-[0.4em] uppercase">
              Latest writing
            </p>
            <h2 class="text-default text-3xl font-semibold tracking-tight text-balance sm:text-4xl">
              Field notes from the craft.
            </h2>
            <p class="text-muted text-base leading-relaxed sm:text-lg">
              Essays on engineering leadership, design systems, and durable story-driven products.
            </p>
          </div>
          <div class="flex flex-col gap-8">
            {blogPostings.map((blogPosting) => (
              <BlogPostingCard
                blogPosting={blogPosting}
                keywords={keywordMap?.[blogPosting.id] ?? []}
              />
            ))}
          </div>
          <div class="flex">
            <ButtonLink href="/blog-postings" variant="secondary" size="lg">
              Read the archive
            </ButtonLink>
          </div>
        </div>
      </div>
    </section>
  )
}
