---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

const LOGO_WIDTH = 212

interface Props {
  src: ImageMetadata
  alt: string
}

const props: Props = Astro.props
const { src, alt } = props
---

<div class="w-53">
  <Image
    src={src}
    alt={alt}
    width={LOGO_WIDTH}
    height={LOGO_WIDTH}
    class="h-auto w-full"
    loading="eager"
  />
</div>
