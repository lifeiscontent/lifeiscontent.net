---
import clsx from 'clsx'
import type { HTMLAttributes } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'div'>, 'class' | 'style'> {
  as?: keyof HTMLElementTagNameMap
}

const { as: Component = 'div', ...htmlProps } = Astro.props
const className = clsx(
  'prose max-w-none text-neutral-900 dark:text-neutral-100',
  'prose-headings:font-semibold prose-headings:tracking-tight prose-headings:text-neutral-900 dark:prose-headings:text-neutral-100 prose-h1:text-balance prose-h2:text-balance',
  'prose-p:text-neutral-600 dark:prose-p:text-neutral-300 prose-strong:text-neutral-900 dark:prose-strong:text-neutral-100 prose-li:text-neutral-900 dark:prose-li:text-neutral-100 prose-lead:text-neutral-600 dark:prose-lead:text-neutral-300',
  'prose-a:font-semibold prose-a:text-neutral-600 prose-a:no-underline hover:prose-a:text-neutral-500 dark:prose-a:text-neutral-200 dark:hover:prose-a:text-neutral-100',
  'prose-blockquote:border-l-2 prose-blockquote:border-neutral-200 prose-blockquote:pl-6 prose-blockquote:text-neutral-900 dark:prose-blockquote:border-neutral-700 dark:prose-blockquote:text-neutral-100',
  'prose-hr:border-neutral-200 dark:prose-hr:border-neutral-700',
  'prose-code:bg-neutral-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:text-neutral-900 dark:prose-code:bg-neutral-900 dark:prose-code:text-neutral-100',
  'prose-pre:border prose-pre:border-neutral-200 prose-pre:bg-neutral-50 prose-pre:text-neutral-900 prose-pre:shadow-none dark:prose-pre:border-neutral-700 dark:prose-pre:bg-neutral-900 dark:prose-pre:text-neutral-100',
  'prose-img:border prose-img:border-neutral-200 dark:prose-img:border-neutral-700',
  'prose-sm sm:prose-lg'
)
---

<Component class={className} {...htmlProps}>
  <slot />
</Component>
