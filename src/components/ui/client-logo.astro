---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  src: ImageMetadata
  alt: string
  width: number
  height: number
}

const props: Props = Astro.props
const { src, alt, width, height } = props
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  class="h-full w-full object-contain opacity-70 saturate-0 transition hover:opacity-100 hover:saturate-100 dark:invert dark:hover:invert-0"
  loading="lazy"
  decoding="async"
/>
