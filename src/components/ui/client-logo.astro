---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  src: ImageMetadata
  alt: string
  width: number
  height: number
}

const props = Astro.props
const { src, alt, width, height } = props
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={`h-full w-full object-contain saturate-0 dark:invert`}
  loading="lazy"
  decoding="async"
/>
