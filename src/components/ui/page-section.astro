---
import type { HTMLAttributes } from 'astro/types'

type SectionVariant = 'hero' | 'default'
type ContentGap = 'sm' | 'md' | 'lg'
type MaxWidth = '2xl' | '3xl' | '4xl'

type Props = Omit<HTMLAttributes<'section'>, 'class' | 'style'> & {
  variant?: SectionVariant
  contentGap?: ContentGap
  maxWidth?: MaxWidth
}

const sectionPadding: Record<SectionVariant, string> = {
  hero: 'px-4 py-14 sm:py-16',
  default: 'px-4 py-12 sm:py-16',
}

const maxWidthClasses: Record<MaxWidth, string> = {
  '2xl': 'max-w-2xl',
  '3xl': 'max-w-3xl',
  '4xl': 'max-w-4xl',
}

const gapClasses: Record<ContentGap, string> = {
  sm: 'gap-4',
  md: 'gap-6',
  lg: 'gap-12',
}

const {
  variant = 'default',
  contentGap = 'md',
  maxWidth = '4xl',
  ...htmlProps
}: Props = Astro.props
---

<section class={sectionPadding[variant]} {...htmlProps}>
  <div class="flex w-full justify-center">
    <div class={`flex w-full ${maxWidthClasses[maxWidth]} flex-col ${gapClasses[contentGap]}`}>
      <slot />
    </div>
  </div>
</section>
