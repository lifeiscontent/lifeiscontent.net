---
import type { HTMLAttributes } from 'astro/types'
import Text from './text.astro'

type EyebrowAttributes = HTMLAttributes<'p'> & HTMLAttributes<'span'> & HTMLAttributes<'div'>

interface Props extends Omit<EyebrowAttributes, 'class' | 'style'> {
  as?: keyof HTMLElementTagNameMap
}

const { as = 'p', ...htmlProps } = Astro.props
---

<Text
  as={as}
  size="xs"
  tone="default"
  weight="semibold"
  tracking="wide"
  transform="uppercase"
  leading="snug"
  {...htmlProps}
>
  <slot />
</Text>
