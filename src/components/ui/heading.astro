---
import type { HTMLAttributes } from 'astro/types'

type HeadingLevel = 1 | 2 | 3 | 4 | 5 | 6
type HeadingSize = 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl'
type HeadingWeight = 'normal' | 'medium' | 'semibold' | 'bold'
type HeadingTone = 'default' | 'muted' | 'accent' | 'inherit'
type HeadingAlign = 'left' | 'center'
type Breakpoint = 'sm' | 'md' | 'lg'

const sizeClasses: Record<HeadingSize, string> = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-2xl',
  xl: 'text-3xl',
  '2xl': 'text-4xl',
  '3xl': 'text-5xl',
  '4xl': 'text-6xl',
}

const responsiveSizeClassMap: Record<Breakpoint, Record<HeadingSize, string>> = {
  sm: {
    sm: 'sm:text-lg',
    md: 'sm:text-xl',
    lg: 'sm:text-2xl',
    xl: 'sm:text-3xl',
    '2xl': 'sm:text-4xl',
    '3xl': 'sm:text-5xl',
    '4xl': 'sm:text-6xl',
  },
  md: {
    sm: 'md:text-lg',
    md: 'md:text-xl',
    lg: 'md:text-2xl',
    xl: 'md:text-3xl',
    '2xl': 'md:text-4xl',
    '3xl': 'md:text-5xl',
    '4xl': 'md:text-6xl',
  },
  lg: {
    sm: 'lg:text-lg',
    md: 'lg:text-xl',
    lg: 'lg:text-2xl',
    xl: 'lg:text-3xl',
    '2xl': 'lg:text-4xl',
    '3xl': 'lg:text-5xl',
    '4xl': 'lg:text-6xl',
  },
}

const weightClasses: Record<HeadingWeight, string> = {
  normal: 'font-normal',
  medium: 'font-medium',
  semibold: 'font-semibold',
  bold: 'font-bold',
}

const toneClasses: Record<HeadingTone, string> = {
  default: 'text-default',
  muted: 'text-muted',
  accent: 'text-primary-600 dark:text-primary-300',
  inherit: '',
}

const alignClasses: Record<HeadingAlign, string> = {
  left: 'text-left',
  center: 'text-center',
}

interface Props extends Omit<HTMLAttributes<'h1'>, 'class' | 'style'> {
  level?: HeadingLevel
  size?: HeadingSize
  sizeAtSm?: HeadingSize
  sizeAtMd?: HeadingSize
  sizeAtLg?: HeadingSize
  weight?: HeadingWeight
  tone?: HeadingTone
  align?: HeadingAlign
}

const {
  level = 2,
  size = 'lg',
  sizeAtSm,
  sizeAtMd,
  sizeAtLg,
  weight = 'semibold',
  tone = 'default',
  align = 'left',
  ...htmlProps
}: Props = Astro.props

const Component = `h${level}` as keyof HTMLElementTagNameMap
const responsiveSizeClasses = (['sm', 'md', 'lg'] as const)
  .map((breakpoint) => {
    const value = breakpoint === 'sm' ? sizeAtSm : breakpoint === 'md' ? sizeAtMd : sizeAtLg
    return value ? responsiveSizeClassMap[breakpoint][value] : ''
  })
  .filter(Boolean)

const className = [
  sizeClasses[size],
  ...responsiveSizeClasses,
  weightClasses[weight],
  toneClasses[tone],
  alignClasses[align],
  'leading-tight text-balance',
]
  .filter(Boolean)
  .join(' ')
---

<Component class={className} {...htmlProps}>
  <slot />
</Component>
