---
import clsx from 'clsx'
import type { HTMLAttributes } from 'astro/types'

type CardGap = 'sm' | 'md'

interface Props extends Omit<HTMLAttributes<'article'>, 'class' | 'style'> {
  gap?: CardGap
}

const { gap = 'md', ...htmlProps } = Astro.props

const className = clsx('flex h-full flex-col', {
  'gap-4': gap === 'sm',
  'gap-5': gap === 'md',
})
---

<article class={className} {...htmlProps}>
  <slot />
</article>
