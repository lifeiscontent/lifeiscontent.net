---
import type { HTMLAttributes } from 'astro/types'

type Gap = 'sm' | 'md' | 'lg'

const gapClasses: Record<Gap, string> = {
  sm: 'gap-4',
  md: 'gap-5',
  lg: 'gap-6',
}

interface Props extends Omit<HTMLAttributes<'article'>, 'class' | 'style'> {
  gap?: Gap
  align?: 'start' | 'center'
}

const { gap = 'md', align = 'start', ...htmlProps }: Props = Astro.props
---

<article
  class={`flex h-full flex-col ${gapClasses[gap]} ${align === 'center' ? 'items-center text-center' : ''}`}
  {...htmlProps}
>
  <slot />
</article>
