---
import Section from '@components/layouts/section.astro'
import Stack from '@components/layouts/stack.astro'
import Text from '@components/ui/text.astro'
import Anchor from '@components/ui/anchor.astro'
import Cue from '@components/ui/cue.astro'
import Eyebrow from '@components/ui/eyebrow.astro'

const socialLinks = [
  { label: 'GitHub', href: 'https://github.com/lifeiscontent', icon: 'github' },
  { label: 'X', href: 'https://x.com/lifeiscontent', icon: 'x' },
  { label: 'Email', href: 'mailto:aaron@lifeiscontent.net', icon: 'email' },
  { label: 'RSS feed', href: '/rss.xml', icon: 'rss' },
] as const

type SocialLink = (typeof socialLinks)[number]
---

<footer class="no-print">
  <Section as="div" paddingX="sm" paddingY="lg" paddingYAtSm="2xl">
    <Stack direction="row" justify="center" width="full">
      <Stack direction="column" width="full" maxWidth="4xl" gap="lg">
        <Stack direction="column" gap="xs">
          <Eyebrow as="span" tone="default">lifeiscontent</Eyebrow>
          <Text tone="muted">
            Purposeful stories for thoughtful builders. A mix of engineering, design, and systems
            thinking.
          </Text>
        </Stack>

        <Stack direction="row" gap="sm" wrap align="center">
          {
            socialLinks.map((link: SocialLink) => (
              <Anchor
                href={link.href}
                target={link.icon === 'email' ? undefined : '_blank'}
                rel={link.icon === 'email' ? undefined : 'noopener noreferrer'}
                variant="article"
                size="sm"
                weight="medium"
                aria-label={link.label}
              >
                <Cue tone="default" size="md">
                  {link.icon === 'github' && (
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M12 0C5.373 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.562 21.8 24 17.303 24 12 24 5.373 18.627 0 12 0Z" />
                    </svg>
                  )}
                  {link.icon === 'x' && (
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231Zm-1.161 17.52h1.833L7.084 4.126H5.117Z" />
                    </svg>
                  )}
                  {link.icon === 'email' && (
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M21 4.5H3A1.5 1.5 0 0 0 1.5 6v12A1.5 1.5 0 0 0 3 19.5h18a1.5 1.5 0 0 0 1.5-1.5V6A1.5 1.5 0 0 0 21 4.5Zm-.75 3-8.675 5.206a1.5 1.5 0 0 1-1.15.157c-.195-.053-.38-.133-.55-.239L2.25 7.5V6l9.25 5.562L20.25 6z" />
                    </svg>
                  )}
                  {link.icon === 'rss' && (
                    <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M5 3.5a1.5 1.5 0 0 0 0 3c6.351 0 11.5 5.149 11.5 11.5a1.5 1.5 0 0 0 3 0C19.5 10.065 13.435 4 5 4a1.5 1.5 0 0 0 0-.5Zm0 5a1.5 1.5 0 0 0 0 3 6.5 6.5 0 0 1 6.5 6.5 1.5 1.5 0 0 0 3 0C14.5 12.268 9.732 7.5 5 7.5Zm.5 6A2.5 2.5 0 1 0 8 16a2.5 2.5 0 0 0-2.5-2.5Z" />
                    </svg>
                  )}
                </Cue>
              </Anchor>
            ))
          }
        </Stack>

        <Text tone="muted" size="sm">
          Â© {new Date().getFullYear()} Aaron Reisman. All rights reserved.
        </Text>
      </Stack>
    </Stack>
  </Section>
</footer>
