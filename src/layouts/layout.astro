---
import '@styles/globals.css'
import Header from '@components/layouts/header.astro'
import Footer from '@components/layouts/footer.astro'

interface Props {
  title?: string
  description?: string
  ogImagePath?: string
}

const {
  title = 'lifeiscontent.net',
  description = 'Online Presence of Aaron Reisman',
  ogImagePath = '/open-graph/site.png',
} = Astro.props

const socialImage = new URL(ogImagePath, Astro.site).toString()

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!doctype html>
<html lang="en" data-scroll-behavior="smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" sizes="any" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="lifeiscontent" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="apple-touch-icon" href="/apple-touch-icon-precomposed.png" sizes="180x180" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="lifeiscontent.net" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:alt" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />
    <meta property="twitter:creator" content="@lifeiscontent" />
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-X2P1K4BQHD"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        window.dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'G-X2P1K4BQHD')
    </script>
  </head>
  <body>
    <div class="flex min-h-full flex-col">
      <Header />

      <main class="flex-1">
        <slot />
      </main>

      <Footer />
    </div>
    <script is:inline>
      ;(() => {
        if (!('serviceWorker' in navigator)) return

        const LEGACY_SW_SUFFIXES = ['/service-worker.js', '/sw.js']

        navigator.serviceWorker
          .getRegistrations()
          .then((registrations) =>
            Promise.all(
              registrations.map(async (registration) => {
                const scriptURL =
                  registration?.active?.scriptURL ||
                  registration?.installing?.scriptURL ||
                  registration?.waiting?.scriptURL ||
                  ''

                if (!scriptURL) return false

                const matchesLegacy = LEGACY_SW_SUFFIXES.some((legacy) => {
                  try {
                    return new URL(scriptURL).pathname.endsWith(legacy)
                  } catch (error) {
                    return scriptURL.endsWith(legacy)
                  }
                })

                if (!matchesLegacy) return false

                try {
                  await registration.unregister()
                  return true
                } catch (error) {
                  console.warn('Failed to unregister legacy service worker', error)
                  return false
                }
              })
            )
          )
          .then(async (results) => {
            const removedAny = results?.some(Boolean)
            if (!removedAny) return

            if ('caches' in window) {
              try {
                const cacheKeys = await caches.keys()
                await Promise.all(cacheKeys.map((key) => caches.delete(key)))
              } catch (error) {
                console.warn('Failed to clear caches after removing legacy service worker', error)
              }
            }

            window.location.reload()
          })
          .catch((error) => {
            console.warn('Legacy service worker cleanup failed', error)
          })
      })()
    </script>
  </body>
</html>
